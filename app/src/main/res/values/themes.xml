<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Base.Theme.Aviator" parent="Theme.Material3.DayNight.NoActionBar">
    <!-- Customize your light theme here. -->
     <item name="colorPrimary">@color/blue</item>
  </style>

  <style name="Theme.Aviator" parent="Base.Theme.Aviator" />

  <style name="MenuButton">
    <item name="android:textColor">@color/white</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:fontFamily">@font/rockwell_extra_bold</item>
    <item name="android:background">@drawable/menu_button_background</item>
    <item name="android:textSize">40sp</item>
    <item name="android:paddingVertical" tools:targetApi="o">5dp</item>
    <item name="android:layout_marginVertical" tools:targetApi="o">10dp</item>
  </style>

  <style name="HealthPoint">
    <item name="android:layout_width">4dp</item>
    <item name="android:layout_marginVertical" tools:targetApi="o">3dp</item>
    <item name="android:layout_marginHorizontal" tools:targetApi="o">1dp</item>
    <item name="android:layout_height">match_parent</item>
  </style>

  <style name="ScoreText">
    <item name="android:background">@drawable/score</item>
    <item name="android:fontFamily">@font/rockwell_extra_bold</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">20sp</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_width">100dp</item>
    <item name="android:layout_height">25dp</item>
  </style>
</resources>